<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.company.events.entity.Student"
          name="student-view">
        <property name="universityGroup"/>
        <property name="phone"/>
        <property name="birthday"/>
        <property name="post"/>
        <property name="department"
                  view="_minimal">
        </property>
        <property name="lastName"/>
        <property name="middleName"/>
        <property name="firstName"/>
        <property name="user"
                  view="_minimal"/>
        <property name="name"/>
    </view>
    <view class="com.company.events.entity.Event"
          name="event-view">
        <property name="name"/>
        <property name="startDate"/>
        <property name="endDate"/>
        <property name="chief"
                  view="_minimal">
            <property name="firstName"/>
            <property name="lastName"/>
        </property>
        <property name="location"/>
        <property name="cabinet"/>
    </view>
    <view class="com.company.events.entity.Event"
          extends="_local"
          name="event-edit">
        <property name="chief"
                  view="_minimal">
            <property name="firstName"/>
            <property name="lastName"/>
        </property>
        <property name="tasks"
                  view="_minimal">
            <property name="name"/>
            <property name="deadline"/>
            <property name="executors"
                      view="_minimal">
                <property name="firstName"/>
                <property name="lastName"/>
            </property>
        </property>
        <property name="participants"
                  view="_minimal">
            <property name="role"/>
            <property name="student"
                      view="_minimal">
                <property name="universityGroup"/>
                <property name="phone"/>
                <property name="firstName"/>
                <property name="lastName"/>
            </property>
        </property>
        <property name="logistics"
                  view="_minimal">
            <property name="name"/>
            <property name="available"/>
            <property name="chief"/>
        </property>
    </view>
    <view class="com.company.events.entity.Task"
          name="task-view">
        <property name="name"/>
        <property name="deadline"/>
        <property name="executors"
                  view="_minimal">
            <property name="firstName"/>
            <property name="lastName"/>
        </property>
        <property name="event"
                  view="_minimal">
        </property>
    </view>
    <view class="com.company.events.entity.Task"
          name="task-edit">
        <property name="name"/>
        <property name="description"/>
        <property name="deadline"/>
        <property name="executors"
                  view="_minimal"/>
        <property name="event"
                  view="_minimal">
            <property name="name"/>
        </property>
    </view>
    <view class="com.company.events.entity.Participant"
          name="participant-view">
        <property name="event"
                  view="_minimal">
        </property>
        <property name="student"
                  view="_minimal">
        </property>
        <property name="role"/>
    </view>
    <view class="com.company.events.entity.Participant"
          extends="_local"
          name="participant-edit">
        <property name="event"
                  view="_minimal">
            <property name="name"/>
        </property>
        <property name="student"
                  view="_minimal">
            <property name="universityGroup"/>
            <property name="phone"/>
        </property>
    </view>
    <view class="com.company.events.entity.ExtUser"
          extends="_local"
          name="extUser-edit">
        <property name="student"
                  view="_minimal"/>
        <property name="group">
            <property name="name"/>
        </property>
        <property name="userRoles"
                  view="user.edit"/>
        <property name="substitutions"
                  view="user.edit"/>
    </view>
    <view class="com.company.events.entity.Student"
          extends="_local"
          name="student">
        <property name="name"/>
    </view>
</views>
