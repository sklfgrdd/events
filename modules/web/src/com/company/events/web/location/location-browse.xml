<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.events.web.location.LocationBrowse"
        focusComponent="locationsTable"
        lookupComponent="locationsTable"
        messagesPack="com.company.events.web.location">
    <dsContext>
        <datasource id="locationDs"
                    class="com.company.events.entity.Location"
                    view="_local"/>
        <groupDatasource id="locationsDs"
                         class="com.company.events.entity.Location"
                         view="_local">
            <query>
                <![CDATA[select e from events$Location e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%" pos="700">
            <vbox id="lookupBox"
                  expand="locationsTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <groupTable id="locationsTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="address"/>
                        <column id="phone"/>
                        <column id="name"/>
                    </columns>
                    <rows datasource="locationsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="locationsTable.create"/>
                        <button id="editBtn"
                                action="locationsTable.edit"/>
                        <button id="removeBtn"
                                action="locationsTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="locationDs">
                        <column width="250px">
                            <field id="address"/>
                            <field id="phone"/>
                            <field id="name"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
