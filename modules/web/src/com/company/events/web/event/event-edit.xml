<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.events.web.event.EventEdit"
        datasource="eventDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.events.web.event">
    <dsContext>
        <datasource id="eventDs"
                    class="com.company.events.entity.Event"
                    view="event-edit">
            <collectionDatasource id="tasksDs"
                                  property="tasks"/>
            <collectionDatasource id="participantsDs"
                                  property="participants"/>
        </datasource>
        <collectionDatasource id="chiefDs"
                              class="com.company.events.entity.Student"
                              view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="eventDs">
            <column width="350px">
                <field id="name"/>
                <field id="description"
                       rows="5"/>
                <field id="location"/>
                <field id="chief"
                       optionsDatasource="chiefDs"/>
            </column>
            <column width="200px">
                <field id="startDate"/>
                <field id="endDate"/>
            </column>
        </fieldGroup>
        <tabSheet>
            <tab id="tasks"
                 caption="msg://taskTabCaption">
                <table id="tasksTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="deadline"/>
                        <column id="executorsList"/>
                    </columns>
                    <rows datasource="tasksDs"/>
                    <buttonsPanel>
                        <button action="tasksTable.create"/>
                        <button action="tasksTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
            <tab id="participants"
                 caption="msg://studentTabCaption">
                <table id="studentsTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="student.name"/>
                        <column id="student.phone"/>
                        <column id="role"/>
                    </columns>
                    <rows datasource="participantsDs"/>
                    <buttonsPanel>
                        <button action="studentsTable.create"/>
                        <button action="studentsTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
