<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.events.web.task.TaskEdit"
        datasource="taskDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.events.web.task">
    <dsContext>
        <datasource id="taskDs"
                    class="com.company.events.entity.Task"
                    view="task-edit">
            <collectionDatasource id="executorsDs"
                                  property="executors"/>
        </datasource>
    </dsContext>
    <dialogMode closeable="true"
                forceDialog="true"
                height="600"
                modal="true"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <vbox spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="taskDs">
                <column width="500px">
                    <field id="name"/>
                    <field id="description"
                           rows="5"/>
                    <field id="deadline"/>
                    <field id="event"/>
                </column>
            </fieldGroup>
            <groupBox id="executorsBox"
                      caption="msg://com.company.events.entity/Task.executors"
                      width="100%" spacing="true">
                <buttonsPanel>
                    <button action="executorsTable.add"/>
                    <button action="executorsTable.remove"/>
                </buttonsPanel>
                <table id="executorsTable"
                       height="205px"
                       width="100%">
                    <actions>
                        <action id="add"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                    </columns>
                    <rows datasource="executorsDs"/>
                </table>
            </groupBox>
        </vbox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
